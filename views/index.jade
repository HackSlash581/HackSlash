extends layout

block content
  h1= "LAMDA Quest"
  script(src="javascript/main.js")
  #gameDiv
  #scriptingModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='scriptingModalLabel', aria-hidden='true')
    .modal-dialog
        .modal-content
          .modal-header
            button.close(type='button', data-dismiss='modal', aria-label='Close') 
              span(aria-hidden='true') &times;
            h4#scriptingModalLabel.modal-title 
          .modal-body
            h5 Object Properties
              #objectProperties
            form
              .form-group
                label.control-label(for='script-text') HackScript:
                input#script-text.form-control(type='text')
          -// We need a hidden div or something here to display compiler errors
          -// if the user submits invalid HackScript.
          .modal-footer
            button.btn.btn-primary.pull-left(type='button') HackScript Help
            button.btn.btn-default(type='button', data-dismiss='modal') Cancel
            button.btn.btn-primary(type='button') Compile Script
  
